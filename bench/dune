(library
 (name bench_common)
 (modules bench_common)
 (libraries irmin-server irmin-client unix progress uuidm))

;; Require the above executables to compile during tests

(rule
 (alias runtest)
 (package irmin-server-bench)
 (deps main.exe)
 (action (progn)))

(rule
 (alias runtest)
 (package irmin-server-bench)
 (deps overhead.exe)
 (action (progn)))

(library
 (name irmin_traces)
 (modules trace_common trace_definitions trace_collection trace_stat_summary
   trace_stat_summary_conf trace_stat_summary_utils trace_stat_summary_pp
   trace_replay trace_replay_intf tezos_history_metrics)
 (preprocess
  (pps ppx_repr ppx_deriving.enum))
 (libraries irmin irmin-pack unix lwt repr ppx_repr bentov mtime printbox
   printbox.unicode mtime.clock.os bench_common))

(executable
 (name main)
 (modules main)
 (preprocess
  (pps ppx_deriving_yojson ppx_repr))
 (libraries
  irmin-server irmin-client
  irmin-test.bench
  irmin_traces
  lwt
  unix
  cmdliner
  logs
  yojson
  ppx_deriving_yojson
  memtrace
  repr
  ppx_repr
  bench_common
  mtime
  mtime.clock.os
  bentov
  tezos-context-hash-irmin))

(executable
 (name overhead)
 (modules overhead)
 (preprocess
  (pps ppx_deriving_yojson ppx_repr))
 (libraries
  irmin-server irmin-client
  irmin-test.bench
  irmin_traces
  lwt
  unix
  cmdliner
  logs
  memtrace
  repr
  ppx_repr
  bench_common
  benchmark
  mtime
  mtime.clock.os
  tezos-context-hash-irmin))

